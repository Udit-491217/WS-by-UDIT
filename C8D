<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    // Initialize AOS (Animate On Scroll)
    AOS.init();

    // Dark Mode Toggle
    const toggleThemeButton = document.getElementById("toggleTheme");
// Initialize vote tracking
let hasVoted = false;
let votes = { Rohan: 0, Mina: 0, Kaku: 0 };

function submitVote(character) {
    if (hasVoted) {
        alert("Bro Kitna Dabaoge!, Bas kar ab");
        return; // Prevent voting again
    }

    // Increment vote count
    votes[character]++;
    hasVoted = true;

    // Display the current vote counts
    document.getElementById("result").textContent = `Votes: Rohan - ${votes.Rohan}, Mina - ${votes.Mina}, Kaku - ${votes.Kaku}`;

    // Optionally, store vote counts in localStorage or on the server
    // localStorage.setItem("votes", JSON.stringify(votes));
}

</script>

